# Database
DATABASE_URL=mysql://user:password@localhost:3306/spinella

# Authentication
JWT_SECRET=your-secret-key-here
OAUTH_SERVER_URL=
OWNER_OPEN_ID=

# Forge API (for notifications)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Resend Email Service (required for booking confirmation emails)
# Get your API key from https://resend.com/api-keys
# In Resend dashboard, add and verify your sending domain (e.g. spinella-geneva.ch)
RESEND_API_KEY=re_your_api_key_here

# CORS (only needed when front end is on a different domain than the API)
# Comma-separated list of allowed origins, e.g.:
# CORS_ORIGIN=https://spinella-geneva.ch,https://www.spinella-geneva.ch
CORS_ORIGIN=

# App Configuration
VITE_APP_ID=spinella-geneva
# When the API is on another host than the site, set the API base URL (used by the booking form):
# VITE_API_URL=https://your-api.railway.app
VITE_API_URL=
PORT=3000
NODE_ENV=development
